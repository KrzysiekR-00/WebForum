@model WebForum.ViewModels.NewTopicViewModel

@{
    ViewData["Title"] = "Create Topic";
}

<h1>Create Topic</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="mb-3">
                    <div class="form-floating">
                        <input asp-for="Title" class="form-control text-dark bg-white" placeholder="Title" required/>
                        <label asp-for="Title" class="control-label"></label>
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <div class="form-floating">
                        <textarea asp-for="Content" class="form-control text-dark bg-white" style="height: 100px" placeholder="Content" required></textarea>
                        <label asp-for="Content" class="control-label"></label>
                    </div>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
